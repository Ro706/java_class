public class Pattern {
	public static void main(String[] args) {
		byte n = 4;
		for(int i = 0; i < n ; i++) {
			for (int j = 0 ; j < i ; j++) {
				System.out.print("* ");
			}
			System.out.println();
		}
		
		System.out.println();
		n= 3;
		for(int i = 0 ; i < n ; i++) {
			for(int j = i ; j < n ; j++) {
				System.out.print("* ");
			}
			System.out.println();
		}
		/*
		    * 
		  * *
		* * *
		 */
		for(int i = 1 ; i <=n+1 ; i++) {
			for(int k = i ; k < n+1; k++) {
				System.out.print("-");
			}
			for(int j = 0 ; j <i ; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		//or
		n = 4;
		for(int i = 0 ; i < n ;i++) {
			for(int j = n ; j < i ; j++) {
				System.out.print("-");
			}
			for(int k = 0 ;k < i;k++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}

